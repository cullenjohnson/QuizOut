{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "debugpy",
            "request": "launch",
            "program": "quizout-client/app.py",
            "console": "integratedTerminal",
            "python": "quizout-client/.venv/Scripts/python",
            "consoleName": "CLIENT debugpy",
            "env": {
                "VIRTUAL_ENV": ".venv",
                "PATH": "quizout-client/.venv/Scripts:${env:PATH}"
            },
        },
        {
            "name": "Test Client",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "console": "integratedTerminal",
            "python": "quizout-client/.test-venv/Scripts/python",
            "consoleName": "CLIENT TESTS",
            "env": {
                "VIRTUAL_ENV": ".test-venv",
                "PATH": "quizout-client/.test-venv/Scripts:${env:PATH}"
            },
        },
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "python": "quizout-server/.venv/Scripts/python",
            "consoleName": "SERVER debugpy",
            "env": {
                "VIRTUAL_ENV": ".venv",
                "PATH": "quizout-server/.venv/Scripts:${env:PATH}",
                "FLASK_APP": "quizout-server/app",
                "FLASK_DEBUG": "1",
                "FLASK_RUN_PORT": "8000",
                "FLASK_RUN_HOST": "0.0.0.0"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Server",
                "Client"
            ],
            "stopAll": true
        }
    ]
}